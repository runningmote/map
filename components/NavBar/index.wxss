page{width:100%;height:100%;}
.wrap{
  width:100%;
  height:100%;
  margin:0 10rpx;
  display: flex;
  flex-direction: column;
}
.wrap-item{
  display: flex;
  flex-direction: row;
  width:100%;
  margin-top:50rpx;
}
.img{
  width:100rpx;
  
}
.img-item{
  width:50rpx;
  height:50rpx
}
.inp{
  flex: 1;
  padding:0 40rpx;
  background:rgb(244, 243, 243);
  border-radius: 10rpx;
  
}
.inp-item{
  width:300rpx;
  padding:10rpx 0;
  color:black;
}
.inp-cla{
  border-bottom:1px solid #ccc;
}
.nav{
  display: flex;
  flex-direction: row;
  margin-top:20rpx;
}
.runLine{
  width:180rpx;
  text-align: center;
  padding:10rpx;
  background:#999;
  margin:0 10rpx;
  border-radius: 60rpx;
  color:#fff;
}